---
layout: base
---
{% for post in collections.post | reverse %}
    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
    <div class="metadata">
        <span>Published on <time datetime="{{ post.date | isoDate }}">{{ post.date | readableDate }}</time></span>
        <span>About {{ post | readingTime({ speed: 200 }) }} reading time</span>
    </div>
    <p>{% excerpt post %}</p>
    <hr class="separator">
{% endfor %}
